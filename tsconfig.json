{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // For Node.js
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true, // Allow import/export compatibility
    "forceConsistentCasingInFileNames": true,
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true,
    "sourceMap": true // Enable if you want to debug TS source
  },
  "include": ["src"], // Include your source files
  "exclude": ["node_modules", "dist"] // Exclude unnecessary folders
}
